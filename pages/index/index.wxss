@import"../../static/styles/iconfont.wxss";
scroll-view{
  height: 30px;
}
.container{
  display: flex;
  flex-flow:row wrap;
  justify-content: space-around;
  width: 100%;
  padding: 10px 2px;
  margin-bottom: 30px;
  box-sizing: border-box;
}
.container .content{
  width: 355rpx;
  height: 260rpx;
  border-radius: 2px;
  margin-bottom: 10px;
  position: relative;
}

.content .content-pic{
  position: relative;
}
.content-pic image{
  width: 100%;
}
.content-pic .content-pic-des{
  position: absolute;
  left: 0;
  bottom: 15rpx;
  display: flex;
  box-sizing: border-box;
  padding: 0 25rpx;
  justify-content: space-between;
  width: 100%;
  color:#fff;
  font-size:20rpx;
}
.content-pic-des .pic-des-l{
  z-index: 1;
}
.content-pic-des .pic-des-r{
  z-index: 1;
}
.container .content-des{
  color:#000;
  position: absolute;
  bottom: 0px;
  font-size: 25rpx;
}
.content-des text{
  display:-webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.iconfont{
  font-size:22rpx;
}